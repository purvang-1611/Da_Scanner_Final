<style>
.vertical-nav {
  min-width: 17rem;
  width: 17rem;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
  transition: all 0.4s;
}

.page-content {
  width: calc(100% - 17rem);
  margin-left: 17rem;
  transition: all 0.4s;
}
.page-content-body {
  width: calc(100% - 17rem);
  margin-left: 18rem;
  transition: all 0.4s;
}
#sidebarCollapse{
    width:105px !important;
    height: 38px !important;
    
    z-index: 50;
}


/* for toggle behavior */

#sidebar.active {
  margin-left: -17rem;
}

#content.active {
  width: 100%;
  margin-left: 0;
}
img{
    width: 200px;
    height: 200px;
}

