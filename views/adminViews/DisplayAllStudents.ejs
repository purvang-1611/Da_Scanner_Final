<body>

<%-include('adminHeader') %>
<div class="page-content-body" id="content-body">
          <br/><br/>
        <div class="row-fluid">
                <h2 style="color: black"><%=title%></h2>
                
		</div>
		<table class="table table-bordered" id="StuTable" style="width:80%">
			<thead class="thead-dark">
					<tr>
							<th >Student ID</th>
							<th >Name</th>
							<th >Email</th>
                            <th >Course</th>
                            <th>Batch</th>
							<th >Disable/Enable</th>
							<th>Reset Student's QR </th>
					</tr>
			  </thead>
			  <tbody>
				  		<% for(user of users){ %>
						 <tr>
							<td style="color:black"><%=user._id %></td>
							<td style="color:black"><%=user.fName%> <%=user.lName %></td>
                            <td style="color:black"><%=user.userEmailId %></td>
                            <td><%=user.courseName%></td>
                            <td><%=user.batchYear%></td>
							<td style="color:black">
								<%if(user.enabled){%>
								&nbsp;<a href="javascript:disableStu(<%=user._id%>)" data-toggle="tooltip" title="Disable!"><i class="fas fa-user-times"></i></a> <%} else{%>
								 &nbsp; &nbsp; &nbsp; &nbsp; <a href="javascript:enableStu(<%=user._id%>)" data-toggle="tooltip" title="Enable!"><i class="fas fa-user"></i></a><%}%>
							</td>

							<td><a href="javascript:resetStudent(<%=user._id%>)"><i class="fa fa-refresh" aria-hidden="true"></i></a></td>
						  </tr>   
						  <%} %>  
			  </tbody>
	  </table>
		<br/>
		
		
		
  


