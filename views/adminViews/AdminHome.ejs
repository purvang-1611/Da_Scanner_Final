<script>
        $(document).ready(function() {
            $('#courseForm').on('submit', function(e){
              // validation code here
              //alert("hey");
                let valid=0;
                let courseID = $('#courseID').val();
                let course = $('#courseName').val();
                let dur = $('#duration').val();
               
                //alert(courseID.length + " " + course.length + " "+ dur.length)
                if(courseID.length == 2 && course.length > 4 && dur.length >=1 )
                {
                        valid=1;
                        e.preventDefault();
                        
                        $.ajax({
                        type: 'post',
                        url: '/admin/addCourse',
                        data: {
                                courseID: courseID,
                                courseName: course,
                                duration: dur,
                        },
                        success: function(data){
                        let confirm = data;
                        //$('#success').html(confirm);
                        //alert(confirm);
                        },
                        error: function(jqXHR, textStatus, error)
                        {
                               //alert("asdasd" + error);
                               //console.log("heyuuuuu" + jqXHR.responseText);

                               let err = jqXHR.responseText;
                               $("#error").html(err);
                                //console.log(jqXHR);
                               //console.log(textStatus);
                               
                        }
                
                        });
                }

                if(courseID.length == 2 )
                {
                        $("#error-course").html("");
                }
                else{
                        $("#error-course").html("Course ID should be of 2 digits");
                }

                if(course.length > 4)
                {
                        $("#error-courseName").html("");
                }
                else{
                        $("#error-courseName").html("Course name too short");
                }

                if(dur.length >=1 )
                {
                        $("#error-duration").html("");
                }
                else{
                        $("#error-duration").html("Course duration is empty");
                }
              if(valid==0) {    
                e.preventDefault();

              }
            });
          });
        </script>
