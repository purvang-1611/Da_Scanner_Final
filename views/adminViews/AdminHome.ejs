        <h2 style="margin: 20px 10px"> Add a course </h2>
        <form action="/admin/addCourse" id='courseForm'>
        <div class="form-group row" style="margin-left: 10px">
          <label for="courseID" class="col-sm-2 col-form-label">CourseID:</label>
          <input type="number" class="form-control col-sm-4" id="courseID" name="courseID">
